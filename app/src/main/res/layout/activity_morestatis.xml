<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".morestatis">

    <TextView
        android:id="@+id/name"
        android:layout_width="357dp"
        android:layout_height="62dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Morroco"
        android:textColor="@color/cyan"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="135dp"
        android:layout_height="118dp"
        android:layout_marginStart="138dp"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:layout_marginBottom="307dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <LinearLayout
        android:id="@+id/statis"
        android:layout_width="417dp"
        android:layout_height="472dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="27dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Today cases"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Today deaths"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Active cases  "
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Total tests"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Critical cases"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/todaycase"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="172"
                android:textColor="@color/orange"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/todaydeaths"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="+1283"
                android:textColor="@color/red"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/activecases"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="717"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/totaltests"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="712"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/criticalcases"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="172"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_4" />

    <TextView
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="89dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>